@page "/tracks"
@inherits TrackIndexBase

@using TrackId.Business.Extensions

<!-- Content Row -->
<div class="row">

    @if (Tracks is null)
    {
        <div class="text-center mt-1 mb-4 col-12">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    }
    else
    {
        @foreach (var track in Tracks.Items)
        {
            <div class="col-xl-12 col-lg-12">
                <div class="row">
                    <div class="col-xl-3 col-md-4 mb-3">
                        <div class="card e-card shadow border-0">
                            <a href="sports-detail.html">
                                <div class="m-card-cover">
                                    <img src="img/c1.jpg" class="card-img-top" alt="...">
                                </div>
                                <div class="card-body p-0">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-10 p-3">
                                            <p class="card-text text-gray-900 mb-1">@track.Title</p>
                                            <p class="card-text">
                                                <small class="text-muted"><i class="fas fa-map-marker-alt fa-sm ml-1"></i>
                                                    @track.Artists.GetArtistsPretty()
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>